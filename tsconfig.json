{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./build-all",
        "preserveWatchOutput": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es2015", "es2016", "es2017", "ESNext"],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "typings"
    ]
}
